@page "/CreateUser"
@using Microsoft.AspNetCore.Components
@using crudAppCW2.Models

<PageTitle>Create User</PageTitle>

<h3>CreateUser</h3>

<EditForm Model="@user">
    <InputText @bind-Value="user.Name" placeholder="Name" class="form-control" style="width: 450px;"/>
    <ValidationMessage For="@(() => user.Name)"/>
    
    <InputText @bind-Value="user.Email" placeholder="Email" class="form-control" style="width: 450px;"/>
    <ValidationMessage For="@(() => user.Email)"/>
    
        <label for="users">Choose a Role:</label>
        <select @bind="user.RoleId" class="form-control" style="width: 200px;">
            <option value="Admin">Admin</option>
            <option value="User">User</option>
        </select>
        <br/>
        <button class="btn btn-primary" @onclick="CreateUsers">Add This User</button>
</EditForm>





@code {
    private User user = new User();

    [Inject]
    private NavigationManager _navigationManager { get; set; }

    private async Task CreateUsers()
    {
        _navigationManager.NavigateTo("/Users");
    }

}